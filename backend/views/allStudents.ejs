<%- include('header'); -%>

<div class="d-flex justify-content-center text-align-center flex-column">
  <h1>All Students</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Row</th>
        <th>Registration Number</th>
        <th>Name</th>
        <th>Class</th>
        <th>Date Of Admission</th>
        <th>Edit Info</th>
      </tr>
    </thead>

    <tbody>
      <% for( let i=0; i < locals.students.length; i++ ) { %>
      <tr>
        <th><%= (i+1) %></th>
        <td><%= locals.students[i].registrationNumber %></td>
        <td><%= locals.students[i].studentName %></td>
        <td><%= locals.students[i].grade %></td>
        <td><%= locals.students[i].DOA.toISOString().split('T')[0] %></td>
        <td>
          <a href="/student/<%= locals.students[i].registrationNumber %>"
            >Update</a
          >
        </td>
      </tr>

      <% } %>
    </tbody>
  </table>
</div>

<%- include('footer'); -%>
