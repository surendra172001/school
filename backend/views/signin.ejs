<%- include('header'); -%>
<div class="d-flex justify-content-center text-align-center flex-column">
  <h1>Signin</h1>

  <form action="/signin" method="POST">
    <div class="form-outline mb-4">
      <input
        type="email"
        name="email"
        id="email"
        placeholder="example@example.com"
      />
    </div>
    <div class="form-outline mb-4">
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Enter Password"
      />
    </div>
    <div class="form-outline mb-4">
      <button type="submit" class="btn btn-primary btn-block">Admit</button>
    </div>
  </form>
</div>

<%- include('footer'); -%>
