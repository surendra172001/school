<%- include('header'); -%>
<div>
  <div class="d-flex justify-content-center text-align-center flex-column">
    <h1>All Grades</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Row</th>
          <th>Grade Name</th>
          <th>Edit Info</th>
        </tr>
      </thead>

      <tbody>
        <% for( let i=0; i < locals.grades.length; i++ ) { %>
        <tr>
          <th><%= (i+1) %></th>
          <td><%= locals.grades[i].gradeName %></td>
          <td>
            <a href="/grade/<%= locals.grades[i].gradeName %>">Update</a>
          </td>
          <td></td>
        </tr>

        <% } %>
      </tbody>
    </table>
  </div>

  <%- include('footer'); -%>
</div>
